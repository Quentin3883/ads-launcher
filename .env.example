# ======================
# Facebook API - App PRODUCTION
# ======================
FACEBOOK_APP_ID=YOUR_PRODUCTION_APP_ID
FACEBOOK_APP_SECRET=YOUR_PRODUCTION_APP_SECRET

# ======================
# OAuth Configuration
# ======================
FACEBOOK_REDIRECT_URI=http://localhost:4000/auth/facebook/callback

